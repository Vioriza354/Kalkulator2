<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#302D2D"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >



    <EditText
        android:id="@+id/result_id"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:textSize="18pt"
        android:layout_height="70dp" />

    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        >
        <Button
            android:id="@+id/Button7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            android:onClick="Button7"
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/Button4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="Button4"
            android:text="4"
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/Button1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="Button1"
            android:text="1"
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/ButtonTambah"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="ButtonTambah"
            android:text="+"
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/ButtonKali"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="ButtonKali"
            android:text="x"
            android:background="#D8353553"
            android:textSize="13pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/ButtonTitik"
            android:onClick="ButtonTitik"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="."
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/liner1"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/Button8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="Button8"
            android:text="8"
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/Button5"
            android:onClick="Button5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="5"
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/Button2"
            android:onClick="Button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="2"
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/Button0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/liner2"
            android:layout_margin="1dp"
            android:background="#D8353553"
            android:onClick="Button0"
            android:text="0"
            android:textColor="#fff"
            android:textSize="18pt" />
        <Button
            android:id="@+id/ButtonHasil"
            android:onClick="ButtonHasil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="="
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/ButtonKoma"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text=","
            android:textColor="#fff"
            android:background="#D8353553"
            android:textSize="18pt"
            android:layout_margin="1dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/liner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/liner2"
        >
        <Button
            android:id="@+id/Button9"
            android:onClick="Button9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="9"
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/Button6"
            android:onClick="Button6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="6"
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/Button3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/liner3"
            android:layout_margin="1dp"
            android:background="#D8353553"
            android:onClick="Button3"
            android:text="3"
            android:textColor="#fff"
            android:textSize="18pt" />
        <Button
            android:id="@+id/ButtonKurang"
            android:onClick="ButtonKurang"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="-"
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/ButtonBagi"
            android:onClick="ButtonBagi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text=":"
            android:background="#D8353553"
            android:textSize="18pt"
            android:textColor="#fff"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/ButtonHapus"
            android:onClick="ButtonHapus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="AC"
            android:textColor="#fff"
            android:background="#D8353553"
            android:textSize="18pt"
            android:layout_margin="1dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/liner3"
        android:background="#CE2828"
        android:layout_marginBottom="9dp"
        >

    </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>